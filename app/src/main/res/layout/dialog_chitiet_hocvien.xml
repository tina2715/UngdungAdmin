<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_person_black_24dp"
                android:id="@+id/img_hv"/>

                <Button
                    android:id="@+id/btn_xoatthv"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/bogoc_btn_xanh"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xóa thông tin học viên"/>
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Thông tin học viên:"
                    android:textSize="16sp"
                    android:textColor="@color/den"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Mã số:  "
                    android:gravity="end"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/id_hv"
                    android:textColor="@color/blue"
                    android:gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Mã HV"/>
            </LinearLayout>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/et_custom"
                android:text="Họ tên học viên"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:padding="10dp"
                android:drawablePadding="5dp"
                android:id="@+id/tv_hotenhv"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/et_custom"
                android:text="Email học viên"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:padding="10dp"
                android:drawablePadding="5dp"
                android:id="@+id/tv_emailhv"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/et_custom"
                android:text="Số điện thoại"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:padding="10dp"
                android:drawablePadding="5dp"
                android:id="@+id/tv_sdthv"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/et_custom"
                android:text="Địa chỉ"
                android:drawableLeft="@drawable/ic_place_black_24dp"
                android:padding="10dp"
                android:drawablePadding="5dp"
                android:id="@+id/tv_diachihv"
                android:gravity="center_vertical"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>