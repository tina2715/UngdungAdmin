<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuanlylophocAc">
    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">
        <EditText
            android:layout_weight="8"
            android:id="@+id/edt_timlh"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="ID lớp học"
            android:padding="10dp"/>
        <Button
            android:layout_weight="2"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="Tìm"
            android:background="@drawable/bogoc_btn_xanh"
            android:id="@+id/btn_timlh"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <Button
            android:textColor="@color/white"
            android:id="@+id/btn_chua_lop"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@color/orange"
            android:text="Chưa XN"/>
        <Button
            android:textColor="@color/white"
            android:id="@+id/btn_da_lop"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@color/blue"
            android:text="Đã XN"/>
        <Button
            android:textColor="@color/white"
            android:id="@+id/btn_khoa_lop"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@color/green"
            android:text="khóa" />
        <Button
            android:textColor="@color/white"
            android:id="@+id/btn_chuacogs_lop"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@color/blue"
            android:text="Chưa có gs"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            tools:listitem="@layout/item_lophoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lophoc_recyclerview"/>
    </LinearLayout>


</LinearLayout>